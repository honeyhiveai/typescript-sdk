    "compilerOptions": {
        "target": "ES2018",
        "module": "Node16",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
